/**index.wxss**/
.swiper-wrapper {
  width: 100%;
  height: 400rpx;
}
/*覆盖image默认宽高*/
.slider-image {
  width: 100%;
  height: 100% !important;
}
.nav-btn-list {
  display: flex;
  width: 100%;
  height: 200rpx;
  background: #fff;
  justify-content: space-around;
}
.btn-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.btn-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.btn-item text {
  font-size: 13px;
  color: #515151;
}
.bargain-wrapper {
  background: #fff;
  font-size: 13px;
  margin-top: 20rpx;
  color: #515151;
}
.bargain-header {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #f8f8f8;
}
.bargain-header .icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.bargain-item {
  height: 200rpx;
  display: flex;
  border-bottom: 1rpx solid #f8f8f8;
  padding: 20rpx;
}
.bargain-img {  
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.bargain-info {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 12px;
}
.info-header {
  display: flex;
  flex-direction: column;
}
.title {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  font-size: 13px;
}
.desc {
  font-size: 12px;
  color: #707070;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.info-price {
  display: flex;
  justify-content: space-between;
  padding-right: 100rpx;
}
.base-price,
.original-price,
.limit {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.base-price .money {
  color: #ed4040;
}
.original-price,
.limit {
  color: #999;
}

